{
    "name": "signpostmarv/daft-db-object",
    "description": "Daft Object with database repositories",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "SignpostMarv",
            "email": "me@signpostmarv.name"
        }
    ],
    "autoload": {
        "psr-4": {
            "SignpostMarv\\DaftObject\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SignpostMarv\\DaftMagicPropertyAnalysis\\": "./vendor/signpostmarv/daft-magic-property-analysis/src/",
            "SignpostMarv\\DaftMagicPropertyAnalysis\\PHPStan\\": "./vendor/signpostmarv/daft-magic-property-analysis/PHPStan/",
            "SignpostMarv\\DaftObject\\": "./vendor/signpostmarv/daft-object/tests-src/",
            "SignpostMarv\\DaftObject\\PHPStan\\": "./vendor/signpostmarv/daft-object/PHPStan/",
            "SignpostMarv\\DaftObject\\Tests\\": "./vendor/signpostmarv/daft-object/Tests/",
            "SignpostMarv\\DaftObject\\EasyDB\\": "./easydb-src/",
            "SignpostMarv\\DaftObject\\EasyDB\\Tests\\": "./easydb-tests/"
        }
    },
    "config": {
        "classmap-authoritative": true,
        "sort-packages": true
    },
    "scripts": {
        "phpunit": [
            "phpunit --dump-xdebug-filter ./xdebug-filter.phpunit.php",
            "php-cs-fixer fix --verbose ./xdebug-filter.phpunit.php",
            "phpunit -vvvv --prepend ./xdebug-filter.phpunit.php --coverage-clover=phpunit.clover"
        ],
        "phpunit-no-coverage": [
            "phpunit -vvvv --no-coverage"
        ],
        "tests": [
            "@phpunit-no-coverage",
            "@other-tests"
        ],
        "scrutinizer": [
            "@phpunit",
            "infection --min-msi=100",
            "@other-tests"
        ],
        "other-tests": [
            "phpstan analyse -c ./phpstan.neon .php_cs.dist src easydb-src easydb-tests",
            "psalm",
            "phpcpd ./src/ ./easydb-tests/ ./easydb-src/",
            "phpmnd ./ --exclude=./phpdoc/ --exclude=./phpunit --exclude=./vendor/",
            "composer-require-checker check ./composer.json",
            "php-cs-fixer fix --verbose --allow-risky=yes --dry-run"
        ],
        "check-coverage-on-tests": [
            "composer install",
            "php ./vendor/phpunit/phpunit/phpunit -c ./phpunit-coverage-on-tests.xml"
        ]
    },
    "require": {
        "php": "^7.1",
        "ext-mbstring": "*",
        "paragonie/easydb": "^2.7",
        "signpostmarv/daft-object": "^1.13"
    },
    "require-dev": {
        "infection/infection": "^0.12.0",
        "maglnet/composer-require-checker": "^1.1",
        "phpstan/phpstan": "^0.11.0",
        "phpstan/phpstan-phpunit": "^0.11.0",
        "phpstan/phpstan-strict-rules": "^0.11.0",
        "phpunit/phpunit": "^7.5",
        "povils/phpmnd": "^2.0",
        "roave/security-advisories": "dev-master",
        "sebastian/phpcpd": "^4.1",
        "signpostmarv/php-cs-fixer-config": "^0.6.0",
        "vimeo/psalm": "dev-master"
    }
}
