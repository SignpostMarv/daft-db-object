{
    "name": "signpostmarv/daft-db-object",
    "description": "Daft Object with database repositories",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "SignpostMarv",
            "email": "me@signpostmarv.name"
        }
    ],
    "autoload": {
        "psr-4": {
            "SignpostMarv\\DaftObject\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SignpostMarv\\DaftObject\\": "./vendor/signpostmarv/daft-object/tests-src/",
            "SignpostMarv\\DaftObject\\PHPStan\\": "./vendor/signpostmarv/daft-object/PHPStan/",
            "SignpostMarv\\DaftObject\\Tests\\": "./vendor/signpostmarv/daft-object/tests/",
            "SignpostMarv\\DaftObject\\EasyDB\\": "./easydb-src/",
            "SignpostMarv\\DaftObject\\EasyDB\\Tests\\": "./easydb-tests/"
        }
    },
    "config": {
        "classmap-authoritative": true,
        "sort-packages": true
    },
    "scripts": {
        "tests": [
            "phpunit -vvvv --coverage-clover=phpunit.clover",
            "phpstan analyse -c ./phpstan.neon .php_cs.dist src easydb-src easydb-tests",
            "psalm",
            "phpcpd ./src/ ./easydb-tests/ ./easydb-src/",
            "php-cs-fixer fix --verbose --allow-risky=yes --dry-run"
        ],
        "check-coverage-on-tests": [
            "composer install",
            "php ./vendor/phpunit/phpunit/phpunit -c ./phpunit-coverage-on-tests.xml"
        ]
    },
    "require": {
        "php": "^7.1",
        "ext-mbstring": "*",
        "paragonie/easydb": "^2.4",
        "signpostmarv/daft-object": "^0.9.5"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.9.2",
        "phpstan/phpstan-phpunit": "^0.9.4",
        "phpstan/phpstan-strict-rules": "^0.9.0",
        "phpunit/phpunit": "^7.1",
        "sebastian/phpcpd": "^4.0",
        "signpostmarv/php-cs-fixer-config": "^0.5.0",
        "vimeo/psalm": "^1.1"
    }
}
